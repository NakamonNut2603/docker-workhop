pipeline {
    agent any
    stages {
        stage('Deploy to Kubernetes') {
            steps {
                sh 'echo "Deploy to Kubernetes"'
                sh 'kubectl apply -f deployment.yaml -n jenkins-to-kube'
            }
        }
        stage('Create NP Service') {
            steps {
                sh 'echo "Create NP Service"'
                sh 'kubectl apply -f nodeport.yaml -n jenkins-to-kube'
            }
        }
    }
    post {
        cleanup {
            sh 'echo "Clean up Workspace"'
            cleanWs()
        }
    }
}