pipeline {
    agent any
    parameters {
        string(name: 'VERSION_TO_DEPLOY', defaultValue: '', description: '')
        choice(choices: ['dev', 'sit'], description: 'Choose environment', name: 'ENVIRONMENT')
    }
    environment {
        VERSION = "${params.VERSION_TO_DEPLOY}"
        ENV = "${params.ENVIRONMENT}"
        ENV_NAME = "env-secret-${ENV}"
    }
    stages {
        stage('Generate Manifest') {
            steps {
                sh 'echo "Generate Manifest"'
                sh 'envsubst < helm/values.yaml > helm/sub-values.yaml'
                sh 'helm template helm --values helm/sub-values.yaml --output-dir helm --debug'
                sh 'mv helm/helm/templates/deployment.yaml helm'
            }
        }
        stage('Deploy to Kubernetes') {
            steps {
                sh 'echo "Deploy to Kubernetes ${ENV}"'
                sh 'kubectl create secret generic ${ENV_NAME} --from-env-file=config/${ENV}.env -n jenkins-to-kube-${ENV} --dry-run=client -o yaml > env-secret-${ENV}.yaml'
                sh 'kubectl apply -f env-secret-${ENV}.yaml -n jenkins-to-kube-${ENV}'
                sh 'kubectl apply -f helm/deployment.yaml -n jenkins-to-kube-${ENV}'
                sh "kubectl rollout restart deployment nestjs-app-deployment -n jenkins-to-kube"
            }
        }
    }
    post {
        cleanup {
            sh 'echo "Clean up Workspace"'
            cleanWs()
        }
    }
}